#!/usr/bin/make -f
# -*- makefile -*-

# hardening options at build time
export DEB_BUILD_HARDENING=1

# Upstream Makefile don't provide install rule
override_dh_install:
	install -D gdisk  $(CURDIR)/debian/gdisk-noicu/sbin/gdisk
	install -D sgdisk $(CURDIR)/debian/gdisk-noicu/sbin/sgdisk
	install -D cgdisk $(CURDIR)/debian/gdisk-noicu/sbin/cgdisk
	install -D fixparts $(CURDIR)/debian/gdisk-noicu/sbin/fixparts
	# install index page for doc-base
	install -D debian/index.html $(CURDIR)/debian/gdisk-noicu/usr/share/doc/gdisk-noicu/index.html

%:
	dh $@
