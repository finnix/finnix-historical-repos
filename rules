#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_install:
	install -m 0755 -d $(CURDIR)/debian/finnix-netboot
	install -m 0755 -d $(CURDIR)/debian/finnix-netboot/usr/share/man/man1
	cp -a debian/root/* $(CURDIR)/debian/finnix-netboot
	pod2man -c '' -r '' -s 1 debian/man/finnix-netboot-server.pod >$(CURDIR)/debian/finnix-netboot/usr/share/man/man1/finnix-netboot-server.1
