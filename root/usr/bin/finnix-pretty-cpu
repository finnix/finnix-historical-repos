use strict;
use warnings;
use POSIX;

my($sysname, $nodename, $release, $version, $machine) = POSIX::uname();

my($cpuinfo) = "";
if(-e "/proc/cpuinfo") {
  open(FILE, "/proc/cpuinfo");
  $cpuinfo .= $_ while(<FILE>);
  close(FILE);
}

my $out = "";
if($cpuinfo =~ /User Mode Linux/) {
  $out = "UML";
  if($cpuinfo =~ /host\s+:\s+(.*?)$/m) {
    $out .= ", host: $1";
  }
} elsif(($machine eq "x86_64") || ($machine =~ /^i\d86$/)) {
  my %cpuarray = ();
  foreach my $line (split/\n/, $cpuinfo) {
    my($name, $val) = split(/\s+:\s+/, $line, 2);
    next unless ($name && $val);
    $val =~ s/\s+/ /g;
    $name = lc($name);
    $cpuarray{$name} = $val;
  }
  if($cpuarray{"model name"}) {
    $out = $cpuarray{"model name"};
  }
  unless($out =~ /\d+\whz/i) {
    if($cpuarray{"cpu mhz"}) {
      $out .= " \@ " . int($cpuarray{"cpu mhz"}) . "MHz";
    }
  }

  $out =~ s/\(R\)//g;
  $out =~ s/\(TM\)//g;
  $out =~ s/ CPU//g;
  $out =~ s/ \@ / /g;
  $out =~ s/Core(\d)/Core $1/g;

  if($cpuarray{"processor"} && ($cpuarray{"processor"} > 0)) {
    $out = "$out (" . ($cpuarray{"processor"} + 1) . ")";
  }
} elsif(($machine eq "ppc") || ($machine eq "ppc64")) {
  my @cpublocks = ();
  my $sharedinfo = "";
  foreach my $block (split(/\n\n/, $cpuinfo)) {
    if($block =~ /^processor\s+:\s+\d/m) {
      push(@cpublocks, $block);
    } else {
      $sharedinfo .= "$block\n";
    }
  }
  chop $sharedinfo;
  my $proccount = 0;
  foreach my $block (@cpublocks) {
    if($sharedinfo) { $block .= "\n$sharedinfo"; }
    my %v = ();
    foreach my $line (split(/\n/, $block)) {
      my($name, $val) = split(/\s+:\s+/, $line, 2);
      $name = lc($name);
      $v{$name} = $val;
    }
    $proccount++;
    my $x;
    if($v{"clock"}) {
      ($x = $v{"clock"}) =~ s/\.\d+//; $x =~ s/(\d)([MG]Hz)/$1 $2/; $out = "$x";
    }
    if($v{"detected as"}) {
      if($v{"detected as"} =~ /\d+ \((.*?)\)/) {
        $out .= " $1";
      }
    }
    if($v{"cpu"}) {
      ($x = $v{"cpu"}) =~ s/, .*$//; $out .= ", $x CPU";
    }
    if($v{"l2 cache"}) {
      ($x = $v{"l2 cache"}) =~ s/\s+.*$//; $out .= ", $x cache";
    }
  }
  if($proccount > 1) {
    $out .= " ($proccount)";
  }
} elsif($machine eq "armv7l") {
  my @cpublocks = ();
  my $sharedinfo = "";
  foreach my $block (split(/\n\n/, $cpuinfo)) {
    if($block =~ /^processor\s+:\s+\d/m) {
      push(@cpublocks, $block);
    } else {
      $sharedinfo .= "$block\n";
    }
  }
  chop $sharedinfo;

  my %v = ();
  foreach my $line (split(/\n/, $sharedinfo)) {
    my($name, $val) = split(/\s+:\s+/, $line, 2);
    $name = lc($name);
    $v{$name} = $val;
  }
  if($v{"hardware"}) {
    $out .= $v{"hardware"};
  }

  my $proccount = 0;
  foreach my $block (@cpublocks) {
    if($sharedinfo) { $block .= "\n$sharedinfo"; }
    my %v = ();
    foreach my $line (split(/\n/, $block)) {
      my($name, $val) = split(/\s+:\s+/, $line, 2);
      $name = lc($name);
      $v{$name} = $val;
    }
    $proccount++;
    if($v{"model name"} && ($proccount == 1)) {
      if($out) { $out .= ", "; }
      $out .= $v{"model name"};
    }
  }
  if($proccount > 1) {
    $out .= " ($proccount)";
  }

}

if($out) {
  print "$out\n";
} else {
  print "$sysname $nodename $release $version $machine\n";
}
