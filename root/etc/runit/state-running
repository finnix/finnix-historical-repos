#!/bin/sh

PATH=/bin:/sbin:/usr/bin:/usr/sbin

. /lib/finnix/finnix-rc-helper.sh

# Let's see if we can get rid of that "INIT:" message
echo -n "${CRE}${ESC}[1A${CRE}"
echo -n "${CRE}${ESC}[1A${CRE}"

export RUNLEVEL=2
/etc/finnix/init.d/rc 2

exec env - PATH=$PATH \
runsvdir -P /lib/finnix/service/running 'log: ...........................................................................................................................................................................................................................................................................................................................................................................................................'
