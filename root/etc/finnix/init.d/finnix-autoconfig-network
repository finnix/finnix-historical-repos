#!/bin/sh

### BEGIN INIT INFO
# Provides:          finnix-autoconfig-network
# Required-Start:    $local_fs
# Required-Stop:
# Default-Start:     S
# Default-Stop:
# Shoft-Description: Finnix network setup
### END INIT INFO

# finnix-autoconfig-network
# Copyright (C) 2014 Ryan Finnie
#
# This program is free software; you can redistribute it and/or modify
# it under the terms of the GNU General Public License as published by
# the Free Software Foundation; either version 2 of the License, or
# (at your option) any later version.

PATH="/bin:/sbin:/usr/bin:/usr/sbin"
export PATH

umask 022

case "$1" in
  start) ;;
  stop|restart|force-reload) exit 0 ;;
  *) echo "Usage: $0 {start|stop|restart|force-reload}" >&2; exit 1 ;;
esac

for i in OS_NAME; do
  read "$i"
done <<EOM
$(
  . /etc/os-release
  echo "$NAME"
)
EOM
. /lib/finnix/finnix-rc-helper.sh

# Bring up loopback interface now
ifup lo >/dev/null 2>/dev/null || true

# Configure interfaces (static or DHCP)
if [ "$FINNIX_NFSBOOT" = "yes" ] || [ "$FINNIX_FORENSIC" = "yes" ]; then
  exit 0
fi

IP_INT="$(getbootparam ip_int)"
arr=$(echo "$IP_INT" | tr "," "\n")
if [ "$arr" = "all" ] || [ -z "$arr" ]; then
  arr=""
  for i in /sys/class/net/*; do
    [ -e "$i" ] || continue
    [ -e "$i/type" ] || continue
    [ "$(cat "$i/type")" = 1 ] || continue
    arr="$arr $(basename "$i")"
  done
fi

mkdir -p /etc/network/interfaces.d

for int in $arr; do
  intfn="$(echo "$int" | sed 's/[^a-zA-Z0-9_-]/_/g')"
  if [ -e "/etc/network/interfaces.d/$intfn" ]; then
    grep -q "Added by $OS_NAME" "/etc/network/interfaces.d/$intfn" || continue
  fi
  echo "# Added by $OS_NAME" >"/etc/network/interfaces.d/$intfn"
  echo "auto $int" >>"/etc/network/interfaces.d/$intfn"

  IP_V4DHCP="$(getbootparam ip_${int}_v4dhcp)"
  IP_V4ADDR="$(getbootparam ip_${int}_v4addr)"
  IP_V4NETMASK="$(getbootparam ip_${int}_v4netmask)"
  IP_V4GATEWAY="$(getbootparam ip_v4gateway)"
  IP_V6DHCP="$(getbootparam ip_${int}_v6dhcp)"
  IP_V6ADDR="$(getbootparam ip_${int}_v6addr)"
  IP_V6NETMASK="$(getbootparam ip_${int}_v6netmask)"
  IP_V6GATEWAY="$(getbootparam ip_v6gateway)"
  IP_DNS="$(getbootparam ip_dns)"
  IP_DOMAIN="$(getbootparam ip_domain)"
  IP_SEARCH="$(getbootparam ip_search)"

  if [ "$IP_V4DHCP" = "yes" ] || [ -z "$IP_V4ADDR" ]; then
    if ! checkbootparam "nodhcp"; then
      echo "iface $int inet dhcp" >>"/etc/network/interfaces.d/$intfn"
    fi
  elif [ -n "$IP_V4ADDR" ]; then
    echo "iface $int inet static" >>"/etc/network/interfaces.d/$intfn"
    [ -z "$IP_V4NETMASK" ] && IP_V4NETMASK="255.255.255.0"
    echo "  address $IP_V4ADDR" >>"/etc/network/interfaces.d/$intfn"
    echo "  netmask $IP_V4NETMASK" >>"/etc/network/interfaces.d/$intfn"
    if [ -n "$IP_V4GATEWAY" ]; then
      echo "  gateway $IP_V4GATEWAY" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_DNS" ]; then
      echo "  dns-nameservers $IP_DNS" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_DOMAIN" ]; then
      echo "  dns-domain $IP_DOMAIN" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_SEARCH" ]; then
      echo "  dns-search $IP_SEARCH" >>"/etc/network/interfaces.d/$intfn"
    fi
  fi

  if [ "$IP_V6DHCP" = "yes" ] || [ -z "$IP_V6ADDR" ]; then
    if ! checkbootparam "nodhcp"; then
      echo "iface $int inet6 dhcp" >>"/etc/network/interfaces.d/$intfn"
    fi
  elif [ -n "$IP_V6ADDR" ]; then
    echo "iface $int inet6 static" >>"/etc/network/interfaces.d/$intfn"
    [ -z "$IP_V6NETMASK" ] && IP_V6NETMASK="64"
    echo "  address $IP_V6ADDR" >>"/etc/network/interfaces.d/$intfn"
    echo "  netmask $IP_V6NETMASK" >>"/etc/network/interfaces.d/$intfn"
    if [ -n "$IP_V6GATEWAY" ]; then
      echo "  gateway $IP_V6GATEWAY" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_DNS" ]; then
      echo "  dns-nameservers $IP_DNS" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_DOMAIN" ]; then
      echo "  dns-domain $IP_DOMAIN" >>"/etc/network/interfaces.d/$intfn"
    fi
    if [ -n "$IP_SEARCH" ]; then
      echo "  dns-search $IP_SEARCH" >>"/etc/network/interfaces.d/$intfn"
    fi
  fi
done

mkdir -p /var/log/interfaces
for int in $(ifquery --list --no-loopback); do
  echo -n "${BLUEITEM} Starting interface configuration: ${WHITE}${int}${NORMAL} "
  ifup --verbose "$int" >>/var/log/interfaces/"${int}".log 2>&1 &
  echo -n "(backgrounded)${CRE}"
done
